#!/usr/bin/env bash

#
# Script loader.
#

export PATH="/usr/local/git/bin:$PATH"

mypath=${BASH_ARGV[0]%/*}

for file in `ls $mypath/bash` ; do
  source $mypath/bash/$file
done

for file in `ls $mypath/git`  ; do
  source $mypath/git/$file
done

for file in `ls $mypath/ruby` ; do
  source $mypath/ruby/$file
done

for file in `ls $mypath/docker` ; do
  source $mypath/docker/$file
done

